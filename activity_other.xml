<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_label"/>
        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_label"/>
        <EditText
            android:id="@+id/email_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weixin_label"/>
        <EditText
            android:id="@+id/weixin_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/special_skill_label"/>
        <CheckBox
            android:id="@+id/music_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="20dp"
            android:text="@string/music"/>
        <CheckBox
            android:id="@+id/arts_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/arts"/>
        <CheckBox
            android:id="@+id/handwriting_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/handwriting"/>
        <CheckBox
            android:id="@+id/basketball_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/basketball"/>
        <CheckBox
            android:id="@+id/football_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/football"/>
        <CheckBox
            android:id="@+id/swimming_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/swimming"/>
    </LinearLayout>
<Button
    android:id="@+id/commit_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="150dp"
    android:text="@string/commit_button"/>
</LinearLayout>